{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="flex flex-col items-center my-8">
	<h1 class="text-3xl font-bold text-gray-900">Votre panier</h1>
	<p class="text-md text-gray-500 mt-2">
		Liste des produits que vous avez ajouté à votre panier.
	</p>
</div>
<table class="table">
	<thead>
		<tr>
			<th>Produit</th>
			<th>Quantité</th>
			<th>Prix</th>
			<th>Total prix produit</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for product in tabProducts %}
		<tr>
			<td>{{ product.product.name }}</td>
			<td >{{ product.quantity }}</td>
			<td>{{ product.product.price }}€</td>
			<td>{{ product.product.price * product.quantity }}€</td>
			<td>
				<a href="{{ path('app_product_show', {'id': product.product.id}) }}" class="text-lime-500 hover:text-lime-600">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"/>
						<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
					</svg>
				</a>
				<a href="{{ path('cart_remove_one_product', {'idProduct': product.product.id}) }}" class="text-red-500 hover:text-red-600">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
					</svg>
				</a>
			</td>
		</tr>
		{% else %}
		<tr>
			<td colspan="6">Il n'y a aucun produit</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
<div class="mt-6 flex justify-between items-center">
	<h3 class="text-xl font-semibold">Total de la commande : {{ total }}€</h3>
	<div class="space-x-4">
		<a href="{{ path('cart_remove_product', {'id': userCart.id}) }}" class=" inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700">
			Vider le panier
		</a>
		<a href="{{ path('cart_paid') }}" class=" inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white">
			Commander
		</a>
	</div>
</div>
{% endblock %}
