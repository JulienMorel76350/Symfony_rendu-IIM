{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<div class="flex p-12">
		<div class="p-12 rounded-2xl border shadow-lg max-w-2xl mx-auto">
			
			<img class="w-32 h-32 rounded-full mx-auto mb-5" src="https://picsum.photos/200" alt="Profile picture">
			{% if form is not defined %}
				<div class="flex justify-center item-center">
					<a href="{{ path('app_profil_update') }}" class="px-4 py-2 bg-lime-500 text-white font-bold rounded-lg">
						Modifier
					</a>
				</div>
			{% endif %}
			{% if form is defined %}
				{{ form_start(form) }}
				<div class="flex justify-between gap-4">
					{{ form_row(form.lastName, {'attr': {'class': 'shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'}}) }}
					{{ form_row(form.firstName, {'attr': {'class': 'shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'}}) }}
				</div>
				<div class="text-gray-600 mt-1">
					{{ form_row(form.email, {'attr': {'class': 'shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'}}) }}
				</div>
				<div class="text-center mt-4">
					<button type="submit" class="px-4 py-2 bg-lime-500 text-white font-bold rounded-lg">
						Enregistrer
					</button>
				</div>
				{{ form_end(form) }}
			{% else %}
				<h2 class="text-center text-2xl font-semibold mt-3">{{ user.lastName }}
					{{ user.firstName }}</h2>
				<p class="text-center text-gray-600 mt-1">{{ user.email }}</p>
			{% endif %}
			{% if app.user %}<div class="flex justify-center mt-4"><a class="px-4 py-2 bg-lime-800 text-white font-bold rounded-lg"href="{{ path('app_logout') }}">Logout</a></div>{% endif %}
			{% if form is not defined %}
				<div class="mt-5">
					<h3 class="text-xl font-semibold">Mes dernières commandes</h3>
					{% if userCarts is defined %}
						{% if userCarts is empty %}
							<p class="text-center text-gray-600 mt-1">Vous n'avez pas encore de commandes</p>
						{% else %}
							<div class="w-full">
								{% for commande in userCarts %}
									<a href="{{ path('get_my_order', {'id': commande.id })}}" class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 p-2">
										<div class="bg-white shadow-md rounded-lg p-4">
											<h4 class="font-semibold text-lg">Commande du
												{{ commande.dateOfPurchase|date('d/m/Y') }}</h4>
											<p class="text-gray-600">Commande n°:
												{{commande.id}}</p>
										</div>
									</a>
								{% endfor %}
							</div>
						{% endif %}
					{% else %}
						<p class="text-center text-gray-600 mt-1">Vous n'avez pas encore de commandes</p>
					{% endif %}
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
